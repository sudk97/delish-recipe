


<section class="webdesigntuts-workshop">
  <form action="" method="get">        
    <input type="search" name="looking_for" placeholder="What do you want to eat today?">         
    <button>Search</button>
  </form>
</section>

<section id="hero" class="section ">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-6 hero">
        <div class="hero-content">
          <h1 style="color: #fff;">Cook Book</h1>
          <p style="color: #c8c8c8 ">Learn to cook enticing delish meals</p>
        </div>
      </div>
      
      
    </div>

  </div>
 

</section>

<% if @recipe.nil? %>
<h2>Sorry, No recipes found for entered query.</h2>
<% else %>
<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
      <br>
      <p><%= @search_term.upcase %> RECIPES </p>
        <hr class="section">
      </div>
    </div>
    <div class="row">
     <% @recipe.each do |course| %>
     <% if course["image_url"].nil? %>
     <% else %>
      <div class="col-sm-6 portfolio-item"> <a href= <%= course["f2f_url"] %> class="portfolio-link">
        <div class="caption">
          <div class="caption-content">
            <h3><%= course["title"] %></h3>
          </div>
        </div>
        
        <img src=<%= course["image_url"] %> class="img-responsive center-block" alt="*image_missing" > </a> </div>
        <% end  %>
      <% end %>

    </div>
  </div>
</section>

<% end %>
